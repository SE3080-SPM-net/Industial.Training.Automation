@model IEnumerable<DataAccess.Students>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table" id="js-customerIndex">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StudentsName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentsID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Faculty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormI_1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormI_3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormI_5)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormI_6)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormI_7)
                </th>

                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.StudentsName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentsID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Faculty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormI_1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormI_3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormI_5)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormI_6)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormI_7)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(document).ready(function() {
            $('#js-customerIndex').DataTable({                             
                "info": false
            });
        } );
    </script>
} 